<%- include('./layout/header') %>
  <%- include('./layout/sidebar') %>

    <main class="app-main">
      <div class="container-fluid py-4">
        <!-- Page Heading -->
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="fw-semibold text-dark mb-0">Dashboard</h2>
          <!-- <textarea name="editor" id="editor"></textarea> -->
        </div>

        <!-- Info Cards Row -->
        <div class="row g-3">
          <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
              <div class="card-body d-flex align-items-center gap-3">
                <i class="bi bi-people-fill fs-2 text-primary"></i>
                <div>
                  <h6 class="mb-1 text-muted">Total Users</h6>
                  <h5 class="mb-0">1,234</h5>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
              <div class="card-body d-flex align-items-center gap-3">
                <i class="bi bi-newspaper fs-2 text-success"></i>
                <div>
                  <h6 class="mb-1 text-muted">Posts</h6>
                  <h5 class="mb-0">178</h5>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
              <div class="card-body d-flex align-items-center gap-3">
                <i class="bi bi-chat-dots fs-2 text-info"></i>
                <div>
                  <h6 class="mb-1 text-muted">Queries</h6>
                  <h5 class="mb-0">42</h5>
                </div>
              </div>
            </div>
          </div>

          <div class="col-md-6 col-xl-3">
            <div class="card shadow-sm border-0">
              <div class="card-body d-flex align-items-center gap-3">
                <i class="bi bi-bell fs-2 text-warning"></i>
                <div>
                  <h6 class="mb-1 text-muted">Notifications Sent</h6>
                  <h5 class="mb-0">314</h5>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Welcome Message or Chart -->
        <div class="card mt-4 shadow-sm border-0">
          <div class="card-body">
            <h5 class="card-title fw-semibold">Welcome, Admin!</h5>
            <p class="card-text text-muted">
              Here's a quick overview of your platform's activity. Use the sidebar to navigate and manage content
              efficiently.
            </p>

            <h5 class="mb-3">ðŸ“‹ Database Tables & Structure</h5>

            <% for (let table of tableNames) { %>
              <div class="mb-4">
                <h6><i class="bi bi-table"></i>
                  <%= table %>
                </h6>
                <div class="table-responsive">
                  <table class="table table-bordered table-sm">
                    <thead class="table-light">
                      <tr>
                        <th>Field</th>
                        <th>Type</th>
                        <th>Null</th>
                        <th>Key</th>
                        <th>Default</th>
                        <th>Extra</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% tableDetails[table].forEach(col=> { %>
                        <tr>
                          <td>
                            <%= col.Field %>
                          </td>
                          <td>
                            <%= col.Type %>
                          </td>
                          <td>
                            <%= col.Null %>
                          </td>
                          <td>
                            <%= col.Key %>
                          </td>
                          <td>
                            <%= col.Default %>
                          </td>
                          <td>
                            <%= col.Extra %>
                          </td>
                        </tr>
                        <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
              <% } %>
          </div>
        </div>

      </div>
      </div>
      </div>
    </main>

