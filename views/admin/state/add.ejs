        <div class="container mt-4">
            <!-- Breadcrumbs -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-light p-3 rounded">
                    <% breadcrumbs.forEach(crumb=> { %>
                        <% if (crumb.url) { %>
                            <li class="breadcrumb-item">
                                <a href="<%= crumb.url %>" class="text-decoration-none">

                                    <%= crumb.label %>
                                </a>
                            </li>
                            <% } else { %>
                                <li class="breadcrumb-item active" aria-current="page">
                                    <i class="bi bi-chevron-right me-1"></i>
                                    <%= crumb.label %>
                                </li>
                                <% } %>
                                    <% }) %>
                </ol>
            </nav>

            <div class="card shadow-sm">
                <div class="card-header text-black">
                    <h5 class="mb-0">Add New State</h5>
                </div>
                <div class="card-body">
                    <form action="/admin/state/add?module=state&moduleId=state" method="POST"
                        enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="name" class="form-label fw-bold">State Name</label>
                                    <input type="text" class="form-control" id="name" name="name" required
                                        maxlength="100" placeholder="Enter state name">
                                </div>
                                <div class="mb-3">
                                    <label for="slug" class="form-label fw-bold">Slug</label>
                                    <input type="text" class="form-control" id="slug" name="slug" required
                                        maxlength="100" placeholder="Enter state slug">
                                </div>

                                <div class="mb-3">
                                    <label for="region_id" class="form-label fw-bold">Region</label>
                                    <select class="form-select" id="region_id" name="region_id" required>
                                        <option value="" disabled selected>Select Region</option>
                                        <% regions.forEach(region=> { %>
                                            <option value="<%= region.id %>">
                                                <%= region.name %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="description" class="form-label fw-bold">Short Description</label>
                                    <textarea class="form-control" id="description" name="description" rows="3" required
                                        placeholder="Brief description about the state"></textarea>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="image" class="form-label fw-bold">State Image</label>
                                    <input type="file" class="form-control" id="image" name="image" accept="image/*"
                                        onchange="previewImage(event)" required>
                                    <div class="mt-2 border rounded p-2 text-center" style="min-height: 150px;">
                                        <img id="image-preview" src="#" alt="Image Preview" class="img-fluid"
                                            style="display: none; max-height: 200px;" />
                                        <div id="image-placeholder"
                                            class="text-muted d-flex flex-column align-items-center justify-content-center"
                                            style="height: 150px;">
                                            <i class="bi bi-image fs-1"></i>
                                            <span>Image preview will appear here</span>
                                        </div>
                                    </div>
                                    <small class="text-muted">Recommended size: 800x600px</small>
                                </div>
                            </div>
                        </div>

                        <!-- <div class="mb-3">
                            <label class="form-label fw-bold">Detailed Content</label>
                            <div id="editor" class="border rounded"
                                style="min-height: 300px; max-height: 300px; overflow-y: scroll;"></div>
                            <input type="hidden" name="content" id="content">
                        </div> -->
                        <div class="editor-container mb-3 ">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="mb-3" style="flex: 1 1 70%; padding-right: 10px;">
                                        <label class="form-label fw-bold">Detailed Content</label>
                                        <div id="editor" class="border rounded"
                                            style="min-height: 300px; max-height: 400px; overflow-y: auto; height: auto;">
                                        </div>
                                        <input type="hidden" name="content" id="content">
                                    </div>
                                </div>


                                <div class="col-lg-4">
                                    <div class="gallery-section"
                                        style="border-left: 1px solid #ccc; padding-left: 10px; max-height: 400px; overflow-y: auto;">
                                        <h5>Previously Uploaded Images</h5>
                                        <div class="container">
                                            <div class="row g-2">
                                                <% if (images && images.length> 0) { %>
                                                    <% images.reverse().forEach((image, index)=> { %>
                                                        <div class="col-6 col-md-4">
                                                            <img src="<%= image %>" alt="Uploaded Image"
                                                                class="img-fluid rounded selectable-image"
                                                                style="height: 120px; object-fit: cover; cursor: pointer;"
                                                                onclick="insertToEditor('<%= image %>')" />
                                                        </div>
                                                        <% }) %>
                                                            <% } else { %>
