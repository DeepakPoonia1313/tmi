<%- include('../layout/header') %>
<%- include('../layout/sidebar') %>

<style>
    .detail-card {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .detail-card-header {
        background: black;
        color: white;
        padding: 1rem 1.5rem;
        border-bottom: none;
    }

    .detail-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        background-color: #f8f9fa;
        border-radius: 0.25rem;
        padding: 0.5rem 0.75rem;
        margin-bottom: 1rem;
        min-height: 38px;
    }

    .content-box {
        max-height: 400px;
        overflow-y: auto;
        border: 1px solid #dee2e6;
        padding: 1rem;
        border-radius: 0.5rem;
        background-color: #f8f9fa;
        font-size: 0.875rem;
    }

    .img-preview {
        max-width: 200px;
        height: auto;
        border-radius: 0.25rem;
        border: 1px solid #dee2e6;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .action-btns .btn {
        min-width: 120px;
    }

    @media (max-width: 768px) {
        .detail-value {
            margin-bottom: 0.75rem;
        }
        .content-box {
            max-height: 300px;
        }
    }
</style>

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb small px-2 py-2 bg-light rounded">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/state/state">States</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="card detail-card mb-4">
        <div class="card-header text-black">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-map-marked-alt me-2"></i> State Details</h5>
                <span class="badge bg-light text-dark">ID: <%= state.id %></span>
            </div>
        </div>
        
        <div class="card-body">
            <div class="row">
                <!-- Left Column -->
                <div class="col-lg-6">
                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-tag me-1"></i> Name</div>
                        <div class="detail-value">
                            <%= state.name %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-link me-1"></i> Slug</div>
                        <div class="detail-value">
                            <%= (state.slug != null) ? state.slug : 'Not Specified' %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-align-left me-1"></i> Description</div>
                        <div class="detail-value">
                            <%= state.description || '<span class="text-muted">No description</span>' %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-globe-americas me-1"></i> Region</div>
                        <div class="detail-value">
                            <%= state.region_name || 'N/A' %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-image me-1"></i> Image</div>
                        <div class="detail-value">
                            <% if (state.image) { %>
                                <img src="<%= state.image %>" alt="State Image" class="img-preview">
                            <% } else { %>
                                <span class="text-muted">No image available</span>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="col-lg-6">
                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-heading me-1"></i> Meta Title</div>
                        <div class="detail-value">
                            <%= state.meta_title || 'Not specified' %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-paragraph me-1"></i> Meta Description</div>
                        <div class="detail-value">
                            <%= state.meta_description || 'Not specified' %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-tags me-1"></i> Meta Keywords</div>
                        <div class="detail-value">
                            <%= state.meta_keywords || 'Not specified' %>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="detail-label"><i class="fas fa-calendar-alt me-1"></i> Timestamps</div>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">Created</small>
                                <div class="detail-value">
                                    <i class="far fa-calendar-plus me-1"></i>
                                    <%= new Date(state.created_at).toLocaleString() %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">Updated</small>
                                <div class="detail-value">
                                    <i class="far fa-calendar-check me-1"></i>
                                    <%= new Date(state.updated_at).toLocaleString() %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Full Width Content -->
            <div class="row mt-2">
                <div class="col-12">
                    <div class="detail-label"><i class="fas fa-file-alt me-1"></i> Content</div>
                    <div class="content-box">
                        <%- state.content || '<span class="text-muted">No content available</span>' %>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="row mt-4">
                <div class="col-12 action-btns">
                    <a href="/admin/state/state" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../layout/footer') %>