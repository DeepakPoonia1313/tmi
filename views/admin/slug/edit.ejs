<%- include('../layout/header') %>
    <%- include('../layout/sidebar') %>

        <style>
            .form-section {
                background-color: white;
                border-radius: 0.5rem;
                padding: 1.5rem;
                margin-bottom: 1.5rem;
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            }

            .form-section h5 {
                color: #3a7bd5;
                padding-bottom: 0.5rem;
                border-bottom: 1px solid #eee;
                margin-bottom: 1.5rem;
            }
        </style>

        <div class="container my-4">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-light p-2 rounded">
                    <li class="breadcrumb-item"><a href="/admin/dashboard"><i class="fas fa-home me-1"></i>
                            Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/slug"><i class="fas fa-tag me-1"></i> Slugs</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><i class="fas fa-edit me-1"></i> Edit Slug
                    </li>
                </ol>
            </nav>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-tag me-2"></i> Edit Slug</h4>
                </div>
                <div class="card-body">
                    <form action="/admin/slug/update/<%= slug.id %>" method="POST">
                        <input type="hidden" name="module" value="slug">
                        <input type="hidden" name="moduleId" value="slug" />

                        <div class="form-section">
                            <h5><i class="fas fa-info-circle me-2"></i> Basic Information</h5>
                            <div class="mb-3">
                                <label class="form-label">Title *</label>
                                <input type="text" name="title" class="form-control" value="<%= slug.title %>" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea name="description" class="form-control"
                                    rows="3"><%= slug.description %></textarea>
                            </div>
                        </div>

                        <div class="form-section">
                            <h5><i class="fas fa-search me-2"></i> SEO Settings</h5>
                            <div class="mb-3">
                                <label class="form-label">Meta Title</label>
                                <input type="text" name="meta_title" class="form-control"
                                    value="<%= slug.meta_title %>">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Meta Description</label>
                                <textarea name="meta_description" class="form-control"
                                    rows="2"><%= slug.meta_description %></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Meta Keywords</label>
                                <textarea name="meta_keywords" class="form-control"
                                    rows="2"><%= slug.meta_keywords %></textarea>
                            </div>
                        </div>

                        <div class="form-section">
                            <h5><i class="fas fa-clock me-2"></i> Timestamps</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Created At</label>
                                    <input type="text" class="form-control"
                                        value="<%= new Date(slug.created_at).toLocaleDateString() %>" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Updated At</label>
                                    <input type="text" class="form-control"
                                        value="<%= new Date(slug.updated_at).toLocaleDateString() %>" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/admin/slug" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Update Slug
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <%- include('../layout/footer') %>