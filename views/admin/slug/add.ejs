<%- include('../layout/header') %>
    <%- include('../layout/sidebar') %>

        <div class="container mt-4">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb p-3 bg-light rounded-3">
                    <% breadcrumbs.forEach((crumb, index)=> { %>
                        <% if (crumb.url && index !==breadcrumbs.length - 1) { %>
                            <li class="breadcrumb-item">
                                <a href="<%= crumb.url %>" class="text-decoration-none text-primary">
                                    <i class="fas fa-home me-1"></i>
                                    <%= crumb.label %>
                                </a>
                            </li>
                            <% } else { %>
                                <li class="breadcrumb-item active" aria-current="page">
                                    <i class="fas fa-link me-1"></i>
                                    <%= crumb.label %>
                                </li>
                                <% } %>
                                    <% }) %>
                </ol>
            </nav>

            <!-- Card -->
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-link fs-4 me-3"></i>
                        <h5 class="mb-0 fw-bold">Add New Slug</h5>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form action="/admin/slug/add" method="POST">
                        <!-- Title -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">Title</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-tag text-primary"></i></span>
                                <input name="title" class="form-control form-control-lg" required maxlength="255"
                                    placeholder="Enter slug title" />
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-muted">Description</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i
                                        class="fas fa-align-left text-primary"></i></span>
                                <textarea name="description" class="form-control" rows="3"
                                    placeholder="Enter description (optional)"></textarea>
                            </div>
                        </div>

                        <!-- SEO Section -->
                        <div class="card mb-4 border-primary">
                            <div class="card-header bg-light">
                                <h6 class="mb-0 text-primary"><i class="fas fa-search me-2"></i>SEO Settings</h6>
                            </div>
                            <div class="card-body">
                                <!-- Meta Title -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted">Meta Title</label>
                                    <input name="meta_title" class="form-control" maxlength="255"
                                        placeholder="Optimized title for search engines (optional)" />
                                </div>

                                <!-- Meta Description -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted">Meta Description</label>
                                    <textarea name="meta_description" class="form-control" rows="2"
                                        placeholder="Brief summary for search results (optional)"></textarea>
                                </div>

                                <!-- Meta Keywords -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold text-muted">Meta Keywords</label>
                                    <textarea name="meta_keywords" class="form-control" rows="2"
                                        placeholder="Comma-separated keywords (optional)"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-flex justify-content-between mt-4">
                            <button type="reset" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-undo me-2"></i>Reset
                            </button>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-save me-2"></i>Save Slug
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <%- include('../layout/footer') %>