<%- include('../layout/header') %>
    <%- include('../layout/sidebar') %>

        <div class="content-wrapper bg-white">
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/admin/dashboard" class="text-dark">Home</a></li>
                                <li class="breadcrumb-item active text-gray">Slugs Management</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </section>

            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h3 class="card-title">All Slugs</h3>
                                    <div class="card-tools">
                                        <a href="/admin/slug/renderAddPage" class="btn btn-sm btn-outline-dark">
                                            <i class="fas fa-plus"></i> Add New
                                        </a>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <input type="text" id="searchByTitle" class="form-control"
                                            placeholder="Search slugs by title...">
                                    </div>

                                    <table class="table table-hover">
                                        <thead class="bg-gray-100">
                                            <tr>
                                                <th class="text-dark">ID</th>
                                                <th class="text-dark">Title</th>
                                                <th class="text-dark">Description</th>
                                                <th class="text-dark">Meta Title</th>
                                                <th class="text-dark">Created</th>
                                                <th class="text-dark">Updated</th>
                                                <th class="text-dark">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% slugs.forEach(slug=> { %>
                                                <tr class="bg-white" data-title="<%= slug.title.toLowerCase() %>">
                                                    <td class="align-middle">
                                                        <%= slug.id %>
                                                    </td>
                                                    <td class="align-middle"><strong>
                                                            <%= slug.title %>
                                                        </strong></td>
                                                    <td class="align-middle text-gray">
                                                        <%= slug.description?.length> 30 ? slug.description.substring(0,
                                                            30) + '...' : slug.description || 'N/A' %>
                                                    </td>
                                                    <td class="align-middle text-gray">
                                                        <%= slug.meta_title?.length> 20 ? slug.meta_title.substring(0,
                                                            20) + '...' : slug.meta_title || 'N/A' %>
                                                    </td>
                                                    <td class="align-middle text-gray">
                                                        <%= new Date(slug.created_at).toLocaleDateString() %>
                                                    </td>
                                                    <td class="align-middle text-gray">
                                                        <%= new Date(slug.updated_at).toLocaleDateString() %>
                                                    </td>
                                                    <td class="align-middle">
                                                        <div class="dropdown">
                                                            <button class="btn btn-sm btn-outline-dark dropdown-toggle"
                                                                type="button" data-bs-toggle="dropdown">
                                                                Actions
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                                                <li>
                                                                    <a class="dropdown-item text-gray"
                                                                        href="/admin/slug/renderSlugDetail/<%= slug.id %>">
                                                                        <i class="fas fa-eye me-2"></i> View Details
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <a class="dropdown-item text-gray"
                                                                        href="/admin/slug/renderEditPage/<%= slug.id %>">
                                                                        <i class="fas fa-edit me-2"></i> Edit
                                                                    </a>
                                                                </li>
                                                                <li>
                                                                    <hr class="dropdown-divider">
                                                                </li>
                                                                <li>
                                                                    <a class="dropdown-item text-gray"
                                                                        href="/admin/slug/delete/<%= slug.id %>"
                                                                        onclick="return confirm('Are you sure you want to delete <%= slug.title %> slug?');">
                                                                        <i class="fas fa-trash-alt me-2"></i> Delete
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="card-footer bg-light">
                                    <div class="d-flex justify-content-between">
                                        <div class="text-gray">Showing <%= slugs.length %> entries</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <%- include('../layout/footer') %>

            <style>
                .bg-gray-100 {
                    background-color: #f8f9fa;
                }

                .text-gray {
                    color: #6c757d;
                }

                .text-dark {
                    color: #343a40 !important;
                    font-weight: 600;
                }

                .table-hover tbody tr:hover {
                    background-color: rgba(0, 0, 0, 0.02);
                }

                .dropdown-menu {
                    border: 1px solid rgba(0, 0, 0, 0.1);
                }

                .img-thumbnail {
                    background-color: #f8f9fa;
                    border: 1px solid #dee2e6;
                }

                .card-title {
                    font-size: 1.3rem;
                    font-weight: 700;
                    color: #343a40;
                }

                .breadcrumb a {
                    font-size: 0.95rem;
                    font-weight: 500;
                }

                .breadcrumb-item.active {
                    font-size: 0.95rem;
                    font-weight: 500;
                }

                table th {
                    font-size: 1rem;
                    font-weight: 700;
                }

                table td {
                    font-size: 0.95rem;
                    font-weight: 500;
                }

                .btn-outline-dark {
                    font-weight: 600;
                    font-size: 0.9rem;
                }

                .dropdown-item {
                    font-size: 0.9rem;
                    font-weight: 500;
                }

                .card-footer .text-gray {
                    font-size: 0.9rem;
                    font-weight: 500;
                }

                .dropdown-toggle {
                    font-size: 0.85rem;
                    font-weight: 600;
                }
            </style>
            <script>
                const searchInput = document.getElementById('searchByTitle');

                searchInput.addEventListener('input', function () {
                    const query = this.value.toLowerCase().trim();
                    const rows = document.querySelectorAll('table tbody tr');

                    rows.forEach(row => {
                        const title = row.getAttribute('data-title');
                        row.style.display = title.includes(query) ? '' : 'none';
                    });
                });
            </script>